<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.board.community.CommunityReadActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_arrow_back_white_24dp"
            android:gravity="center"
            app:backgroundTint="@color/colorPrimaryDark"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="자유게시판"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/modifyButton"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/modifyButton"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_mode_edit_black_24dp"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="@color/colorButton"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/communityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:text="수업가기실타"
        android:textSize="19dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/colorgreydark"
        android:textColorHint="@color/colorgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginTop="7dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/communityWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="익명"
                android:textSize="13dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/colorgreydark"
                android:textColorHint="@color/colorgrey"
                />
            <TextView
                android:id="@+id/communityDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10/01"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@color/colorgreydark"
                android:textColorHint="@color/colorgrey"
                />
            <TextView
                android:id="@+id/communityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="10:00"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@color/colorgreydark"
                android:textColorHint="@color/colorgrey"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right">

            <Button
                android:id="@+id/communityHeartButton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="right"
                android:text="♥0"
                android:textSize="11dp"
                android:textColor="@color/colorWarning"
                android:background="#00ff0000"
                app:cornerRadius="10dp"
                />

            <TextView
                android:id="@+id/communityCount"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="조회수 0"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@color/colorgreydark"
                />

        </LinearLayout>
    </LinearLayout>


        <TextView
            android:id="@+id/communityContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="술이나 한 잔 하러 갈 사람 구함"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/colorgreydark"/>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/communityFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:text="첨부파일없음" />

        <Button
            android:id="@+id/downbtn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom_green"
            android:text="다운로드"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/Loading"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="익명"
            android:textColor="@color/colorgreydark"
            android:textSize="12dp"
            android:id="@+id/commentAnonymousCheck"></CheckBox>
        <ScrollView
            android:layout_width="295dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorlightPrimary">

            <EditText
                android:id="@+id/commentContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="깨끗한 댓글 문화가 행복한 세상을 만듭니다:)"
                android:textSize="12dp"
                android:padding="7dp"
                android:textColor="#000000"
                android:textColorHint="@color/colorgrey"
                android:background="@android:color/transparent"/>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right">
            <Button
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="등록"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:id="@+id/commentAddButton"
                android:layout_marginLeft="3dp"
                app:backgroundTint="@color/colorgreendark"
                app:cornerRadius="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentListView"
        android:dividerHeight="2dp"
        android:divider="@color/colorBackground"/>
</LinearLayout>
</ScrollView>